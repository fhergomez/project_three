        <!-- item list -->
        <div class="panel panel-default results">
          <div class="panel-heading listings"><h4>results</h4></div>
        </div>
        <!-- end item list -->
      </div>
      <div class="col-xs-6 map-container"><!--map-canvas will be postioned here--></div>
    </div>
  </div>
</div><!-- end main list & map div -->

