
<form action="" method="POST" role="form">
  <legend>New Date</legend>

  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="name" placeholder="Name your date">
  </div>
  <button type="submit" class="btn btn-primary">Start</button>
</form>

<% myDates.forEach(function(date){ %>
  <div class="well">
    <div class="row">
      <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
        <form method='post' action="/dates/<%= date.id %>?_method=delete">
          <button type='submit' class='btn btn-default glyphicon glyphicon-remove' ></button>
        </form>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <h3><%- link_to(date.title, '/dates/'+date.id) %></h3>
      </div>


    </div>
  </div>
<% }); %>
