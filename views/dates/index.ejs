
<form action="" method="POST" role="form">
  <!-- <legend>New Date</legend> -->
  <div class="form-group">
    <label for="">Create a new date</label>
    <div class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <input id="input-field" type="text" class="form-control" name="name" placeholder="Name your date">
      </div>
      <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
        <button id="submit-button" type="submit" class="btn btn-default">Start</button>
      </div>
    </div>
  </div>
</form>
<div class="row">
  <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
    <% myDates.forEach(function(date){ %>
      <div class="well">
        <div class="row">
          <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
            <form method='post' action="/dates/<%= date.id %>?_method=delete">
              <button type='submit' class='btn btn-lg btn-default glyphicon glyphicon-remove' ></button>
            </form>
          </div>
          <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
            <h3><%- link_to(date.title, '/dates/'+date.id )%></h3>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
